<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00dcee"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/to_menu"
        android:id="@+id/toggleMenu"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="false"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="22sp"
        android:text="Hello world"
        android:id="@+id/barTitle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <ImageButton
        android:scaleType="fitXY"
        android:background="@null"
        android:id="@+id/barItem"
        android:src="@drawable/act_bar_make_photo"

        android:layout_width="85dp"
        android:layout_height="50dp"
        android:paddingLeft="44dp"
        android:paddingTop="12dp"
        android:paddingRight="11dp"
        android:paddingBottom="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@null"
        android:src="@drawable/refresh_button_pattern"
        android:scaleType="fitXY"
        android:id="@+id/refreshButton"
        android:layout_alignTop="@+id/barTitle"
        android:layout_alignLeft="@+id/barItem"
        android:layout_marginTop="12dp" />

</RelativeLayout>