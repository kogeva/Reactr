<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:tools="http://schemas.android.com/tools"
 android:layout_width="match_parent"
 android:layout_height="match_parent"
 tools:context=".MainActivity"
    android:background="#d6614d"
 >
<android.support.v4.view.ViewPager
 android:id="@+id/pager"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 >
</android.support.v4.view.ViewPager>

         <ImageButton
             android:id="@+id/skipBtn"
             android:layout_width="90dp"
             android:layout_height="40dp"
                android:src="@drawable/skip_button"
             android:layout_alignParentRight="true"
             android:background="@null"
             android:layout_alignParentTop="true"
             android:scaleType="fitXY"
             android:paddingLeft="0dp"
             android:paddingTop="0dp"
             android:layout_marginTop="30dp"
             android:layout_marginRight="30dp" />
         
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"

              android:layout_gravity="center_horizontal|bottom"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="20dp">


              <ImageButton
                  android:id="@+id/slide0"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:padding="5dp"
                  android:src="@drawable/dot_on"
                  android:background="@null"
                  android:scaleType="fitXY"
                  android:state_enabled="false"
                  />



            <ImageButton
                 android:id="@+id/slide1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="5dp"
                android:src="@drawable/dot_off"
                android:background="@null"
                android:scaleType="fitXY"
                android:state_enabled="false"
                 />


              <ImageButton
                  android:id="@+id/slide2"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:padding="5dp"
                  android:src="@drawable/dot_off"
                  android:background="@null"
                  android:scaleType="fitXY"
                  android:state_enabled="false"/>

              <ImageButton
                  android:id="@+id/slide3"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:padding="5dp"
                  android:src="@drawable/dot_off"
                  android:background="@null"
                  android:scaleType="fitXY"
                  android:state_enabled="false"/>
              
              
                <ImageButton
                    android:id="@+id/slide4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="5dp"
                    android:src="@drawable/dot_off"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:state_enabled="false"/>
                
                
                  <ImageButton
                      android:id="@+id/slide5"
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:padding="5dp"
                      android:src="@drawable/dot_off"
                      android:background="@null"
                      android:scaleType="fitXY"
                      android:state_enabled="false"
                    />

              <ImageButton
                  android:id="@+id/slide6"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:padding="5dp"
                  android:src="@drawable/dot_off"
                  android:background="@null"
                  android:scaleType="fitXY"
                  android:state_enabled="false"
                  />
              <ImageButton
                  android:id="@+id/slide7"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:padding="5dp"
                  android:src="@drawable/dot_off"
                  android:background="@null"
                  android:scaleType="fitXY"
                  android:state_enabled="false"
                  />
        </LinearLayout>


</RelativeLayout>